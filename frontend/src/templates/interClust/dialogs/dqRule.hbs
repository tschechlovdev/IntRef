<div class="modal fade" id="{{id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Restriktionen bearbeiten: {{name}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div>
                    <h6>Restriktionen für Werte: </h6>
                    <div id="hierRestrictionDiv"></div>
                    <div class="add_rest_button_container">
                        <button type="button" class="btn btn-primary btn_add_restrict">Restriktion hinzufügen</button>
                    </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Schließen</button>
                <button type="button" class="btn btn-primary btnSaveRestrictions">Speichern</button>
            </div>
        </div>
    </div>
</div>